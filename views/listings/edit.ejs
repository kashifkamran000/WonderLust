<% layout("/layouts/boilerplate.ejs") -%>
<body>
    <div class="row">
        <div class="col-6 offset-3">
    <h3>Edit Your Listing:</h3><br>
    <form action="/listings/<%=listing._id%>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">

    <div>
        <label for="title" class="form-label">Title:</label>
        <input type="text" name="listing[title]" id="title" value="<%= listing.title %>" class="form-control" required>
        <div class="invalid-feedback">
            Plase enter title!
          </div>
    </div><br>
    <div>
        <label for="description" class="form-label">Description:</label>
        <textarea name="listing[description]" id="description" class="form-control" required><%= listing.description %></textarea>
        <div class="invalid-feedback">
            Plase enter description!
          </div>
    </div><br>
    <div>
        <label for="image-url" class="form-label">Upload New Image:</label>
        <input type="file" id="image-url" name="listing[image]" class="form-control" required>
    </div><br>
    <div>
        <label for="price" class="form-label">Price:</label>
        <input type="number" name="listing[price]" id="price" value="<%= listing.price %>" required class="form-control">
        <div class="invalid-feedback">
            Plase enter price!
          </div>
    </div>  <br>
    <div class="row">
    <div class="col-6">
        <label for="location" class="form-label">Location:</label>
        <input type="text" name="listing[location]" id="location" value="<%= listing.location %>"  required class="form-control">
        <div class="invalid-feedback">
            Plase enter location!
          </div>
    </div>
    <div class="col-6">
        <label for="country" class="form-label">Country:</label>
        <input type="text" name="listing[country]" id="country" value="<%= listing.country %>" required class="form-control">
        <div class="invalid-feedback">
            Plase enter country!
          </div>
    </div>
</div><br>

        <button type="submit" class="btn btn-dark" style="border: none;">Edit</button>
    </form>
</div>
</div>
</body>

